---
import FooterForm from "./FooterForm";
import FooterLink from "./FooterLink.astro";

const date = new Date();

const currentYear = date.getFullYear();
---

<footer class="mt-auto bg-neutral-800 py-10 text-neutral-400">
  <div class="mx-auto grid w-11/12 max-w-screen-xl grid-cols-1 gap-6 lg:grid-cols-4">
    <div class="flex flex-col gap-4">
      <div class="flex flex-col gap-1">
        <FooterLink href="/program">Program</FooterLink>
        <FooterLink href="/delavnice">Delavnice</FooterLink>
        <FooterLink href="/kdo-smo">Kdo smo</FooterLink>
        <FooterLink href="/ali-ves">Ali veš</FooterLink>
        <FooterLink href="/galerija">Galerija</FooterLink>
        <FooterLink href="/nakup-kart">Nakup kart</FooterLink>
      </div>

      <p class="hidden text-sm lg:block">Copyright © {currentYear} Borštnikovanje</p>
    </div>

    <div class="flex flex-col gap-1">
      <FooterLink href="/kontakt">Kontakt</FooterLink>
      <FooterLink href="/pogoji-uporabe">Pogoji uporabe</FooterLink>
      <FooterLink href="/spletni-piskotki">Spletni piškotki</FooterLink>
    </div>

    <FooterForm client:visible />

    <div class="flex flex-col gap-2 lg:items-center">
      <div class="flex flex-col gap-2">
        <p>Spremljajte nas</p>

        <div class="flex items-center gap-2">
          <FooterLink href="/" title="Odpri Instagram">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-instagram" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"></path>
              <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path>
              <path d="M16.5 7.5l0 .01"></path>
            </svg>
          </FooterLink>

          <FooterLink href="" title="Odpri Facebook">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-facebook" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"></path>
            </svg>
          </FooterLink>
        </div>
      </div>
    </div>

    <div>
      <p class="text-center text-sm lg:hidden">Copyright © {currentYear} Borštnikovanje</p>
    </div>
  </div>
</footer>
