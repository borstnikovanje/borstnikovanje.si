---
import TeamMembers from "../components/common/TeamMembers";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const teamMembersRaw = await getCollection("teamMembers");

const teamMembers = teamMembersRaw.sort((a, b) => a.data.order - b.data.order);
---

<Layout
  title="Kdo smo"
  description="Naša ekipa je sestavljena strastnih in predanih ljubiteljev gledališča, umetnosti in kulture. Skupaj si prizadevamo, da bi ustvarili nepozabno izkušnjo za obiskovalce našega festivala in hkrati pomagali ohraniti dediščino Ignacija Borštnika."
>
  <main class="flex flex-col gap-14 pt-16 lg:pt-32">
    <section class="mx-auto w-11/12 max-w-screen-xl">
      <div class="flex flex-col gap-6">
        <h1 class="font-tan-pearl text-5xl uppercase lg:text-7xl">Kdo smo</h1>

        <div class="flex flex-col gap-6 lg:flex-row lg:gap-12">
          <p class="w-full leading-loose lg:w-1/2">
            Naša ekipa je sestavljena strastnih in predanih ljubiteljev
            gledališča, umetnosti in kulture. Skupaj si v sodelovanju s Kulturnim društvom Ignacija Borštnika prizadevamo, da bi ustvarili
            nepozabno izkušnjo za obiskovalce našega festivala in hkrati
            pomagali ohraniti dediščino Ignacija Borštnika.
          </p>
        </div>
      </div>
    </section>

    <section class="mx-auto w-11/12 max-w-screen-xl">
      <TeamMembers client:load teamMembers={teamMembers} />
    </section>
  </main>
</Layout>
